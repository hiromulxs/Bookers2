<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'books/list2', user: @user %>
    <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2><%#= @user.name %>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%# @user.each do |user| %>
          <tr>
            <td><%#= image_tag user.get_avatar(80,80) %><br></td>
            <td><%#= user.name %></td>
            <td><%#= link_to "Show", user_path(user.id) %></td>
          </tr>
          <%# end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

