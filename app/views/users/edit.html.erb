<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label>Name</label><br>
          <%= f.text_field :name, autofocus: true, class: "form-control name", placeholder:"Name" %>
        </div>
        <div class="form-group">
          <label>Avatar</label><br>
          <%= f.file_field :avatar, class: "form-control-file user_avater", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label>Introduction</label> <br>
          <%= f.text_area :introduction, class: "form-control introduction", placeholder:"Introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-success" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
