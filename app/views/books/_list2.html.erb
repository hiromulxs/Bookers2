<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%# if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_id" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <%# else %>
    <%#= link_to user_path(current_user), class: "btn btn-outline-secondary btn-block edit_user_id" do %>
      <!--<i class="fas fa-user-cog"></i>-->
    <%# end %>
  <%# end %>
</div>

